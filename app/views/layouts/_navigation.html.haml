= link_to 'Twithub', root_path, class: 'brand'

- if current_user

  %ul.nav
    = nav_link 'Timeline', root_path
    = nav_link 'Favorites', user_favorites_path(current_user)
    = nav_link 'People I Follow', user_followings_path(current_user)

  %ul.nav.pull-right
    %li.dropdown
      %a.dropdown-toggle{'data-toggle' => 'dropdown', 'href' => '#'}
        = current_user.name
        %b.caret
      %ul.dropdown-menu
        %li= link_to 'Logout', logout_path, method: 'delete'

- else
  %ul.nav.pull-right
    %li
      = link_to 'Login via Github', login_path
