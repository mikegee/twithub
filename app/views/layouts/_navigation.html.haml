= link_to "Twithub", root_path, class: 'brand'
%ul.nav
  - if current_user
    %li.dropdown
      %a.dropdown-toggle{'data-toggle' => 'dropdown', 'href' => '#'}
        = current_user.name
        %b.caret
      %ul.dropdown-menu
        %li= link_to 'Logout', logout_path, method: 'delete'
  - else
    %li
      = link_to 'Login via Github', login_path
